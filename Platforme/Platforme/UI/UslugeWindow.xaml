        <Button Content="Izlaz" FontSize="15" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Margin="473,59,0,0" Grid.Row="1" Height="29"/>
        <Button Content="Pretraga po tipu namestaja"  FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Width="172" Margin="10,10,0,0" Grid.Row="2" Height="31"/>
