<Window x:Class="Platforme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Platforme"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid RenderTransformOrigin="0.489,0.518">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233*"/>
            <ColumnDefinition Width="284*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="87*"/>
        </Grid.RowDefinitions>
        <Label Content="Ulogujte se" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="95,10,0,0" Height="49" Width="277"/>
        <Label Content="User name" FontSize="15" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="55,18,0,0" Grid.Row="1" Width="168"/>
        <Label Content="Password" FontSize="15" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="55,19,0,0" Grid.Row="2" Width="168"/>
        <Label Content="User" FontSize="15" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="55,19,0,0" Grid.Row="3" Width="168"/>
        <ComboBox Name="cbTipKorisnika" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Width="168" Grid.Column="1" Margin="10,15,0,0" Grid.Row="3" Height="30"/>
        <Button Content="Exit" FontSize="15" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Grid.Column="1" Margin="194,46,0,0" Grid.Row="4" Height="30"/>
        <Button Content="Potvrdi" FontSize="15" Click="Potvrda" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="143,46,0,0" Grid.Row="4" Height="30"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="37" Margin="10,11,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="205" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.205"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <PasswordBox Grid.Column="1" HorizontalAlignment="Left" Margin="13,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="202" Height="36" RenderTransformOrigin="0.5,0.5">
            <PasswordBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.153"/>
                    <TranslateTransform/>
                </TransformGroup>
            </PasswordBox.RenderTransform>
        </PasswordBox>

    </Grid>
</Window>
